# Django Settings
DJANGO_SECRET_KEY="your_strong_secret_key_here_please_change_me"
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS="localhost 127.0.0.1 [::1] backend" # Space-separated

# PostgreSQL Settings
POSTGRES_DB=aigent_db
POSTGRES_USER=aigent_user
POSTGRES_PASSWORD=aigent_secret_password
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL="postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"

# RabbitMQ Settings
RABBITMQ_DEFAULT_USER=aigent_mq_user
RABBITMQ_DEFAULT_PASS=aigent_mq_secret_password
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
# RABBITMQ_VHOST=/
CELERY_BROKER_URL="amqp://${RABBITMQ_DEFAULT_USER}:${RABBITMQ_DEFAULT_PASS}@${RABBITMQ_HOST}:${RABBITMQ_PORT}/"

# Redis Settings (for Celery result backend)
REDIS_HOST=redis
REDIS_PORT=6379
CELERY_RESULT_BACKEND="redis://${REDIS_HOST}:${REDIS_PORT}/0"

# Ollama Settings (example - adjust based on your Ollama setup)
# If Ollama is on your host machine (Docker Desktop Mac/Win):
OLLAMA_DEFAULT_ENDPOINT="http://host.docker.internal:11434"
# If Ollama is on your host machine (Linux, replace with your docker0 bridge IP if different):
# OLLAMA_DEFAULT_ENDPOINT="http://172.17.0.1:11434"
# If Ollama is on a remote machine via Wireguard:
# OLLAMA_DEFAULT_ENDPOINT="http://10.0.0.2:11434"

# JWT Settings (optional, djangorestframework-simplejwt has defaults)
# JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
# JWT_REFRESH_TOKEN_LIFETIME_DAYS=1